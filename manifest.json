{
	"manifest_version": 2,
	"name": "Browser Extension Template",
	"description": "",
	"version": "0.1.0",
	"author": "",
	"homepage_url": "http://example.com",
	"icons": {
		"16": "icon/icon16.png",
		"32": "icon/icon32.png",
		"48": "icon/icon48.png",
		"128": "icon/icon128.png"
	},
	"background": {
		"scripts": [
			"background.bundle.js"
		],
		"persistent": false
	},
	"page_action": {},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.bundle.js"
			]
		}
	],
	"permissions": [
		"tabs",
		"<all_urls>"
	]
}
